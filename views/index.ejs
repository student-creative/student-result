<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Student Result Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 min-h-screen p-6 font-sans">

  <div class="max-w-6xl mx-auto bg-white p-8 rounded-3xl shadow-xl border border-indigo-100">

    <!-- Heading -->
    <h1 class="text-4xl font-extrabold text-center text-indigo-800 mb-6 tracking-tight">
      üéì Student Result Management
    </h1>
    <p class="text-center text-gray-500 mb-10">Manage students, update results, and track performance with ease.</p>

    <!-- Add Form -->
    <form action="/add" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12 bg-gradient-to-r from-indigo-50 to-purple-50 p-6 rounded-xl shadow-md border border-indigo-100">
      <input type="text" name="fullName" placeholder="Student Name" required class="p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-400 outline-none" />
      <input type="text" name="class" placeholder="Class" required class="p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-400 outline-none" />
      <input type="number" name="rollNumber" placeholder="Roll Number" required class="p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-400 outline-none" />
      <input type="number" name="math" placeholder="Math Marks" required class="p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-400 outline-none" />
      <input type="number" name="science" placeholder="Science Marks" required class="p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-400 outline-none" />
      <input type="number" name="english" placeholder="English Marks" required class="p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-400 outline-none" />
      <input type="email" name="email" placeholder="Email" required class="p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-400 outline-none" />
      <input type="password" name="password" placeholder="Password" required class="p-3 border border-indigo-200 rounded-lg focus:ring-2 focus:ring-indigo-400 outline-none" />
      <div class="md:col-span-2">
        <button type="submit" class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg hover:scale-105 transform transition duration-200 shadow-lg font-semibold">
          ‚ûï Add Student
        </button>
      </div>
    </form>

    <!-- Student List -->
    <div class="grid gap-6">
      <% students.forEach(student => { %>
        <div class="bg-gray-900/50 backdrop-blur-lg border border-gray-700 p-6 rounded-xl shadow-md hover:shadow-indigo-500/20 transition duration-300">

          <!-- Student Info -->
          <div id="view-<%= student._id %>" class="flex flex-col md:flex-row md:justify-between md:items-center gap-4">
            <div>
              <h3 class="text-xl font-bold text-indigo-300 flex items-center gap-2"><%= student.fullName %></h3>
              <p class="text-sm text-gray-400">Class: <%= student.class %></p>
              <p class="text-sm text-gray-400">Roll: <%= student.rollNumber %></p>
              <p class="text-sm text-gray-400">Email: <%= student.email %></p>
            </div>
            <div>
              <% if(student.resultStatus === "Pass") { %>
                <span class="px-4 py-1 bg-green-500/20 text-green-400 rounded-full text-sm font-medium">Pass</span>
              <% } else { %>
                <span class="px-4 py-1 bg-red-500/20 text-red-400 rounded-full text-sm font-medium">Fail</span>
              <% } %>
            </div>
            <div class="flex gap-2 mt-4 md:mt-0">
              <button onclick="toggleEdit('<%= student._id %>')" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg shadow-sm transition">Edit</button>
              <form action="/delete" method="POST" onsubmit="return confirm('Delete this student result?')">
                <input type="hidden" name="id" value="<%= student._id %>" />
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg shadow-sm transition">Delete</button>
              </form>
            </div>
          </div>

          <!-- Edit Form -->
          <form id="edit-<%= student._id %>" action="/update" method="POST" class="hidden mt-4 bg-gray-800 p-4 rounded-lg border border-gray-700">
            <input type="hidden" name="id" value="<%= student._id %>" />
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <input type="text" name="fullName" value="<%= student.fullName %>" class="p-2 border border-gray-700 bg-gray-900 text-gray-100 rounded-lg" required />
              <input type="text" name="class" value="<%= student.class %>" class="p-2 border border-gray-700 bg-gray-900 text-gray-100 rounded-lg" required />
              <input type="number" name="rollNumber" value="<%= student.rollNumber %>" class="p-2 border border-gray-700 bg-gray-900 text-gray-100 rounded-lg" required />
              <input type="number" name="math" value="<%= student.math %>" class="p-2 border border-gray-700 bg-gray-900 text-gray-100 rounded-lg" required />
              <input type="number" name="science" value="<%= student.science %>" class="p-2 border border-gray-700 bg-gray-900 text-gray-100 rounded-lg" required />
              <input type="number" name="english" value="<%= student.english %>" class="p-2 border border-gray-700 bg-gray-900 text-gray-100 rounded-lg" required />
              <input type="email" name="email" value="<%= student.email %>" class="p-2 border border-gray-700 bg-gray-900 text-gray-100 rounded-lg" required />
              <input type="password" name="password" placeholder="Change Password (optional)" class="p-2 border border-gray-700 bg-gray-900 text-gray-100 rounded-lg" />
            </div>
            <div class="mt-4 flex gap-2">
              <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition">üíæ Save</button>
              <button type="button" onclick="cancelEdit('<%= student._id %>')" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition">‚ùå Cancel</button>
            </div>
          </form>

        </div>
      <% }) %>
    </div>

  </div>

  <!-- JS to Toggle Edit Mode -->
  <script>
    function toggleEdit(id) {
      document.getElementById(`view-${id}`).style.display = 'none';
      document.getElementById(`edit-${id}`).style.display = 'block';
    }
    function cancelEdit(id) {
      document.getElementById(`edit-${id}`).style.display = 'none';
      document.getElementById(`view-${id}`).style.display = 'block';
    }
  </script>

</body>
</html>
